#!/bin/bash
#NO_GITHUB

export PGUSER=web
export PGDATABASE=gilt_us_development

export PATH=/opt/apache-ant-1.8.2/bin:/opt/apache-maven-3.0.4/bin:$PATH
export ANT_HOME=/opt/apache-ant-1.8.2

export PATH=~/src/gilt/bin:~/src/gilt/tools/bin:~/src/gilt/play-2.0:$PATH

if [ -z "$NO_VERSION" ] ; then
  mvn -version | grep "Apache Maven"
  ant -version
  sbt --version
fi;

NO_SHELL=1 source set-ruby-old-env
NO_SHELL=1 source set-java-6-env

if [ -z "$NO_SHELL" ] ;
  then bash
fi;

