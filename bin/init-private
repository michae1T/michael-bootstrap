#!/bin/bash

if [ -z "$1" ] ; 
  then echo "bucket name required"; exit 1;
fi;

BUCKET=bucket-$1

PRIVATE_DIR=~/Private/$BUCKET
CRYPT_DIR=~/Dropbox/Private/$BUCKET

if [ ! -e $CRYPT_DIR/.encfs6.xml ] ; then
  dropbox exclude add $CRYPT_DIR/.encfs6.xml
  mkdir -p $CRYPT_DIR
  cp ~/src/dropbox/encfs6.xml $CRYPT_DIR/.encfs6.xml; 
  mkdir -p $PRIVATE_DIR
fi;

encfs $CRYPT_DIR $PRIVATE_DIR

